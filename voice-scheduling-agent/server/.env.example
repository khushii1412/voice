# ──────────────────────────────────────────────────────────────
# Server
# On Render this is injected automatically; set 3000 locally.
# ──────────────────────────────────────────────────────────────
PORT=3000

# ──────────────────────────────────────────────────────────────
# Google OAuth 2.0
# Set GOOGLE_REDIRECT_URI to: https://<your-render-domain>/oauth2callback
# Run GET /auth once in the browser to generate GOOGLE_REFRESH_TOKEN
# ──────────────────────────────────────────────────────────────
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
GOOGLE_REDIRECT_URI=https://YOUR_RENDER_DOMAIN.onrender.com/oauth2callback
GOOGLE_REFRESH_TOKEN=YOUR_REFRESH_TOKEN
GOOGLE_CALENDAR_ID=primary

# ──────────────────────────────────────────────────────────────
# Timezone (IANA format, e.g. Asia/Kolkata, America/New_York)
# ──────────────────────────────────────────────────────────────
TZ=Asia/Kolkata

# ──────────────────────────────────────────────────────────────
# Retell AI
# ──────────────────────────────────────────────────────────────
RETELL_API_KEY=YOUR_RETELL_API_KEY
RETELL_AGENT_ID=YOUR_AGENT_ID
RETELL_AGENT_VERSION=0